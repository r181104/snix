super + Return
	alacritty

super + shift + Return
	kitty

super + b
	brave

super + e
	thunar

super + @space
	rofi -show drun

super + Escape
	pkill -USR1 -x sxhkd

control + alt
	betterlockscreen &

super + alt + {q, r}
	bspc {quit, wm -r}

super + {_,shift + }q
	bspc node -{c, k}

super + shift + t
	bspc desktop -l next

super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10} --follow

super + {j,k}
    bspc desktop -f {prev,next}.local

super + shift + Tab
    bspc node -d last.occupied --follow

super + f  
    bspc node -t ~fullscreen
